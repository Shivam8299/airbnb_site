<%layout("/layouts/boilerplate.ejs")%>
<body>
    <h3 class="new" id="list_head">Listing Details</h3>
    <div class="new">
    <div id="radius">
        <div>
            <img src="<%= listing.image %>" alt="listing">
        </div>
    </div>
    <div class="text">
        <p>
            <%= listing.title%>
            <br>
            <%= listing.discription%>
            <br>
            &#8377; <%= listing.price.toLocaleString("en-IN")%>
            <br>
            <%= listing.location%>
            <br>
            <%= listing.country%>
    </p>
    </div>
</div>
        <br>
        <button id="newBtn" class="new"><a id="edit" href="/listings/<%= listing._id %>/edit"> Edit this listing</a></button>
    <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
        <button class="del">Delete </button>
    </form>
</body>